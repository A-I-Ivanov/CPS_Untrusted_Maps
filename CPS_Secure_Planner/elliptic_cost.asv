function [cin, constraints] = elliptic_cost(x)
global vectorized 
    constraints = [];
    xRep = repmat(x(1:2),length(vectorized),1);
    baseScew = zeros(2);
    baseScew(1,1) = x(3);
    baseScew(2,2) = x(4);
    temp = repmat({baseScew},1,length(vectorized));
    scewRep= blkdiag(temp{:});
    
  
    
    distances = xRep-vectorized;
    
    distances = reshape(distances',[],1);
    
    cin = distances'*scewRep*distances -1;
    
    
    
    
end
